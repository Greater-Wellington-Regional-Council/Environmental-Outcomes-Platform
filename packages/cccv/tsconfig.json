{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Source Maps */
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@values/*": ["src/values/*"],
      "@images/*": ["src/images/*"],
      "@src/*": ["src/*"],
      "@loaders/*": ["src/loaders/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": [
    "src",
    "../cccv.old/src/lib/sharedTypes.d.ts",
    "node_modules/vitest/globals.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
